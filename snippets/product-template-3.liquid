<script>
    document.addEventListener("DOMContentLoaded", function(){
        
        console.log('ww', window.innerWidth);
        const fixButton = function() {
            let scrollpos = window.scrollY;
            const pdp_button = document.querySelector(".add-to-cart")
            let pdp_button_pos = pdp_button.getBoundingClientRect();
            console.log('pdp_button_height.y', pdp_button_pos.y)
            //pdp_button_height = pdp_button_height - 200;
        
            const add_class_on_scroll = () => pdp_button.classList.add("stickit")
            const remove_class_on_scroll = () => pdp_button.classList.remove("stickit")
        
            window.addEventListener('scroll', function() { 
            scrollpos = window.scrollY;
        
            if (scrollpos >= pdp_button_pos.y) { add_class_on_scroll() }
            else { remove_class_on_scroll() }
        
            //console.log(scrollpos)
            })
        }

        setTimeout(function() {
            if ( window.innerWidth < 800 ) {
                fixButton();
            }
        }, 500)
        
        window.addEventListener('resize', (event) => {
            if ( window.innerWidth < 800 ) {
                fixButton();
            }
        });

    });
    
  </script>