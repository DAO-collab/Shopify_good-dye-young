{%- if section.settings.space_around -%}
  <div class="index-section">
{%- endif -%}

<div class="gdy-{{ section.id }} gdy-comparison text-center">
	<div class="page-width">
		{%- if section.settings.title != blank -%}
		<div class="section-header text-{{ section.settings.align_text }}">
			<h2>{{ section.settings.title | newline_to_br }}</h2>
		</div>
		{%- endif -%}

		<table class="gdy-comparison-table ">
			<thead>
				<tr>
					<th>
					
					</th>
					<th>
						<h2 class="h1">
							{{ section.settings.gdy_title }}
						</h2>
					</th>
					<th>
						<h3>
							{{ section.settings.others_title }}
						</h3>
					</th>
				</tr>

				<tbody>

					{% for block in section.blocks %}
					<tr>
						<td class="gdy-comparison-text">
							{{ block.settings.title | newline_to_br }}
						</td>
						<td class="gdy-comparison-icon">
							<svg width="61" height="61" viewBox="0 0 61 61" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M30.8223 0.623535C14.2533 0.623535 0.822266 14.0555 0.822266 30.6235C0.822266 47.1915 14.2543 60.6235 30.8223 60.6235C47.3903 60.6235 60.8223 47.1915 60.8223 30.6235C60.8223 14.0555 47.3903 0.623535 30.8223 0.623535ZM23.8473 48.6235L23.8273 48.6035L23.8103 48.6235L9.82227 34.2235L16.8513 27.0595L23.8283 34.2435L44.8283 12.6245L51.8223 19.8225L23.8473 48.6235Z" fill="#BF00FF"/>
							</svg>
						</td>
						<td class="gdy-comparison-icon">
							<img src="{{ 'icon-x.png' | file_img_url: '200x' }}" alt="X">
						</td>
					</tr>
					{% endfor %}

				</tbody>
				
			</thead>
		</table>


	</div>
	<div class="page-width">
		{%- if section.settings.button_label != blank -%}
		<p class="section-button text-{{ section.settings.align_text }}" style="margin-top: 2rem;">
		  <a href="{{ section.settings.button_link }}" class="btn {% if section.settings.bigger_btn %}bigger_btn{% endif %}">
			{{ section.settings.button_label }}
		  </a>
		</p>
		{%- endif -%}
	</div>
</div>
<p>
</p>
	

{%- if section.settings.space_around -%}
  </div>
{%- endif -%}

{% style %}


.gdy-{{ section.id }} {
	padding-top: {{ section.settings.padding_top }}px;
	padding-bottom: {{ section.settings.padding_bottom }}px;
	{% if section.settings.show_top_border %}
	  border-top: #000 solid 2px;
	{% endif %}
	{% if section.settings.show_bottom_border %}
	  border-bottom: #000 solid 2px;
	{% endif %}
  }
  @media screen and (max-width: 768px) {
	.gdy-{{ section.id }} {
	  padding-top: calc( {{ section.settings.padding_top }}px * 0.65 );
	  padding-bottom: calc( {{ section.settings.padding_bottom }}px * 0.65 );
	}
  }
  
  {% if section.settings.btn_bg_color != blank or section.settings.btn_bg_color != 'rgba(0,0,0,0)' %}
  .gdy-{{ section.id }} .section-button .btn {
	background-color: {{ section.settings.btn_bg_color }}
  }
  {% endif %}

{% endstyle %}

{% schema %}
  {
    "name": "GDY Comparison",
    "settings": [
	  {
		"type": "textarea",
		"id": "title",
		"label": "Heading"
	  },
	  {
		"type": "textarea",
		"id": "gdy_title",
		"label": "GDY Heading",
		"default": "GDY"
	  },
	  {
		"type": "textarea",
		"id": "others_title",
		"label": "Others Heading",
		"default": "Others"
	  },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "info": "Optional button for section"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link"
      },
      {
        "type": "color",
        "id": "btn_bg_color",
        "label": "Button background color"
      },
      {
        "type": "checkbox",
        "id": "bigger_btn",
        "label": "Enhanced button",
        "info": "Slightly bigger button"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Top padding",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "px",
        "label": "Bottom padding",
        "default": 0
      },
      {
        "type": "checkbox",
        "id": "space_around",
        "label": "Add margin above and below",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_top_border",
        "label": "Show top border",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_bottom_border",
        "label": "Show bottom border",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "comparison",
        "name": "GDY Comparison",
        "settings": [
          {
            "type": "textarea",
            "id": "title",
            "label": "Title",
            "default": "Example title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "GDY Comparison",
        "blocks": [
          {
            "type": "comparison"
          },
          {
            "type": "comparison"
          },
          {
            "type": "comparison"
          }
        ]
      }
    ]
  }
{% endschema %}
